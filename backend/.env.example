PORT=4000
NODE_ENV=development

# Database (SQLite in dev by default)
DATABASE_URL="file:./dev.db"

# Auth & security
COOKIE_SECRET=please-change-me
CSRF_SECRET=please-change-me
JWT_ACCESS_SECRET=dev-access-secret
# Access token lifetime (e.g., 15m)
ACCESS_TTL=15m
# Refresh token lifetime fallback (days) when settings not present
REFRESH_DAYS=30
# Optional cookie domain (e.g., .example.com). Leave empty for localhost.
COOKIE_DOMAIN=

# CORS origin for the frontend dev server
CORS_ORIGIN=http://localhost:5173

# OAuth redirect targets (where users land after successful/failed OAuth)
OAUTH_SUCCESS_REDIRECT=http://localhost:5173/
OAUTH_FAILURE_REDIRECT=http://localhost:5173/login?error=oauth_failed

# App origin for building email links (verify/reset)
APP_ORIGIN=http://localhost:5173

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/oauth/google/callback

# GitHub OAuth (create an OAuth App in GitHub settings)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:4000/auth/oauth/github/callback

# Email token TTLs (minutes)
EMAIL_VERIFICATION_TTL_MIN=1440
PASSWORD_RESET_TTL_MIN=60

# SMTP (for sending verification and reset emails). If not set, emails log to console in dev.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="Pet Shelter <no-reply@localhost>"
