{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "perf", "section": "Performance" },
    { "type": "refactor", "section": "Refactoring", "hidden": true },
    { "type": "docs", "section": "Documentation" },
    { "type": "build", "section": "Build System", "hidden": true },
    { "type": "ci", "section": "Continuous Integration", "hidden": true },
    { "type": "test", "section": "Tests", "hidden": true },
    { "type": "chore", "section": "Chores", "hidden": true },
    { "type": "deps", "section": "Dependencies" }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "root",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore: release ${version}",
      "include-component-in-tag": false,
      "pull-request-header": "Release: see README Security quick start and Admin UI sections for setup guidance."
    },
    "backend": {
      "release-type": "node",
      "component": "backend",
      "changelog-path": "CHANGELOG.md",
      "pull-request-header": "Backend release: includes security features. Refer to backend/README.md â†’ Security quick start.",
      "extra-files": [
        { "type": "yaml", "path": "backend/src/openapi.yaml", "jsonpath": "$.info.version" },
        { "type": "yaml", "path": "backend/src/openapi-auth.yaml", "jsonpath": "$.info.version" },
        { "type": "yaml", "path": "backend/src/openapi-pets.yaml", "jsonpath": "$.info.version" }
      ]
    },
    "frontend": {
      "release-type": "node",
      "component": "frontend",
      "changelog-path": "CHANGELOG.md",
      "pull-request-header": "Frontend release: Admin Settings/Users updates; see root README for details."
    }
  }
}
